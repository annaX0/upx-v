<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="@integer/material_motion_duration_long_1"
    android:layout_alignWithParentIfMissing="false"
    android:background="#0A3640"
    android:backgroundTint="#0A3640"
    android:baselineAligned="false"
    android:gravity="fill_vertical"
    android:layoutDirection="inherit"
    android:layoutMode="clipBounds"
    android:orientation="vertical"
    android:padding="20dp"
    android:visibility="visible"
    tools:context=".newPost">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:text="Criar nova postagem"
        android:textColor="#FFFFFF" />

    <Space
        android:layout_width="359dp"
        android:layout_height="14dp" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:background="@color/white"
        android:backgroundTint="#B3212121"
        android:ems="10"
        android:hint="Nome da postagem"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white" />

    <Space
        android:layout_width="358dp"
        android:layout_height="15dp" />

    <EditText
        android:id="@+id/input_msg"
        android:layout_width="360dp"
        android:layout_height="181dp"
        android:background="@color/white"
        android:backgroundTint="#B3212121"
        android:ems="10"
        android:hint="Texto da postagem"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white" />

    <Space
        android:layout_width="360dp"
        android:layout_height="323dp" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="Cadastrar"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="Voltar"
        app:cornerRadius="10dp" />
</LinearLayout>
