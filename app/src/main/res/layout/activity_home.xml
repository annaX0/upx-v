<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3640"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".home">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ativos"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:backgroundTint="#084259"
            android:text="Ativos salvos"
            app:cornerRadius="16dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_comunidade"
            android:layout_width="200dp"
            android:layout_height="143dp"
            android:layout_weight="1"
            android:backgroundTint="#084259"

            android:background="@drawable/shadow_background"
            android:text="Comunidade"
            app:cornerRadius="16dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_conceitos"
            android:layout_width="200dp"
            android:layout_height="143dp"
            android:layout_weight="1"
            android:backgroundTint="#084259"
            android:background="@drawable/shadow_background"

            android:text="Conceitos"
            app:cornerRadius="16dp" />
    </LinearLayout>
</LinearLayout>